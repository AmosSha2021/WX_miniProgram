.login-container {
  height: 100vh;
  background: #ffb241;
}

.logo-container {
  height: 300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.logo {
  height: 200rpx;
  width: 200rpx;
}

.login-parent-container {
  background: #fff;
  border-radius: 40rpx 40rpx 0 0;
  padding: 60rpx 40rpx;
  height: calc(100vh - 300rpx);
}

.login-title-tips {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 60rpx;
  display: block;
  text-align: center;
}

.input-container {
  display: flex;
  align-items: center;
  height: 100rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
  margin-bottom: 40rpx;
  padding: 0 30rpx;
}

.input-container image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.footer-container {
  display: flex;
  justify-content: space-between;
  margin: 40rpx 0;
}

.register-link .highlight {
  color: #ffb241;
  margin-left: 10rpx;
}

.login-btn {
  background: #ffb241;
  color: white;
  border-radius: 50rpx;
  margin-top: 60rpx;
}